{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#DA627D",
                    "foreground": "#ffffff",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "mixed"
                    },
                    "template": "\ue5ff {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#fffb38",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FF{{ end }}"
                    ],
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "powerline",
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf187 {{ .StashCount }}{{ end }} ",
                    "type": "git"
                },
                {
                    "background": "#76b367",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \uf898 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
                    "type": "node"
                },
                {
                    "type": "kubectl",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#000000",
                    "background": "#ebcc34",
                    "template": " \uFD31 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#000000",
                    "background": "#9ec3f0",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": "\uFD03 {{ .User.Name }} ",
                    "type": "az"
                },
                {
                    "type": "battery",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#193549",
                    "background": "#ffeb3b",
                    "background_templates": [
                        "{{ if lt .Percentage 25}}#ff5722{{end}}",
                        "{{ if lt .Percentage 50}}#40c4ff{{end}}",
                        "{{ if lt .Percentage 101}}#4caf50{{end}}"
                    ],
                    "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}\uf295 ",
                    "properties": {
                        "charged_icon": "\uf583 ",
                        "charging_icon": "\uf492 ",
                        "discharging_icon": "\uf58c "
                    }
                },
                {
                    "background": "#33658A",
                    "foreground": "#ffffff",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "template": " {{ .CurrentDate | date .Format }} ",
                    "type": "time"
                },
                {
                    "background": "#0057b7",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "powerline",
                    "template": " \uf608 {{ .FormattedMs }} ",
                    "type": "executiontime"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "background": "#282c34",
                    "foreground": "#3A86FF",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": "{{.Icon}} ",
                    "type": "os"
                },
                {
                    "type": "shell",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "#0077c2"
                },
                {
                    "background": "#3A86FF",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "display_host": false
                    },
                    "style": "powerline",
                    "template": " {{ if .SSHSession }}\uF817 {{ end }}{{ .UserName }} ",
                    "type": "session"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}